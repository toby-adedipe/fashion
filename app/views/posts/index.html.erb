<div align = "center" class="container">
  <h1>index page for posts</h1>
  <% @post.each do |post| %>
    <%= post.created_at.strftime("%B, %d, %Y") %>
    <p><%= post.title %></p>
    <%= image_tag post.image.url %><br>
    <%= truncate(post.body, length: 100) %><hr>
    <ul class="pager">
        <li class="next">
            <%= link_to "Read more" post_path(post) %>
        </li>
    </ul>
  <% end %>

</div>
