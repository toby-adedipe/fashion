<h1>show page</h1>
<h2>Title: <%= @post.title %> </h2>
<%= image_tag @post.image.url %><br>
<%= simple_format(@post.body) %><hr>
<% if current_user.admin? %>
  <%= link_to "delete this post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete the article?"}%> ||
  <%= link_to "edit blog post", edit_post_path(@post) %> ||
  <%= link_to "all blog listing", posts_path %>
<% end %>
