    <%= form_for(@post, :html => {:multipart => true, class: "form-horizontal", role: "form"}) do |f| %>
    <%= render 'shared/errors', obj: @post %>
    <div class="col-xs-8 col-xs-offset-2">
    <div class="">
      <%= f.label :title %>
    </div>
    <div class="">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
    <div class="">
      <%= f.label :body %>
    </div>
    <div class="">
      <%= f.text_area :body, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
    <div class="">
      <%= f.label :image %>
    </div>
    <div class="">
      <%= f.file_field :image , as: :file %>
    </div>
    <div class="">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
    <% end %>
    <p><%= link_to "All blog Posts", posts_path %></p>
  </div>
